<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/logo_ntu"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Tính điểm trung bình môn học"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Điểm giữa kì (50%)" />

        <EditText
            android:id="@+id/edtGiuaky"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Điểm số"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Điểm cuối kì (50%)" />

        <EditText
            android:id="@+id/edtCuoiky"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Điểm số"/>

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <Button
            android:id="@+id/btnTinhDiem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tính điểm trung bình"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edtKetqua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Hiện kết quả ở đây"
            android:enabled="false"/>
    </LinearLayout>

</LinearLayout>